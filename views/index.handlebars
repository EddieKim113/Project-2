<h1>Cats!</h1>

<h2>Cats that are not sleepy!</h2>

<ul>
  {{#each cats}}
    {{#unless sleepy}}
      {{> cats/cat-block sleep=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Cats that are sleepy!</h2>

<ul>
  {{#each cats}}
    {{#if sleepy}}
      {{> cats/cat-block sleep=false}}
    {{/if}}
  {{/each}}
</ul>


<div class="card">
            <div class="card-header">
            <h4>Table Reservation</Table></h4>
        </div>
        <div class="card-body">
          <ul id="tableList" class="list-group"></ul>
        </div>
      </div>

        <div class="row">
                <div class="col-lg-6">
                <div class="card-body">
                      <form role="form">
                          <div class="form-group">
                              <label for="reserve-type">Table Type</label>
                                <input type="radio" name = table-type value="regular"> Regular
                                <input type="radio" name = table-type value="firepit"> Firepit
                            </div>
                        <div class="form-group">
                          <label for="reserve-name">Name</label>
                          <input type="text" class="form-control" id="reserve-name">
                        </div>
